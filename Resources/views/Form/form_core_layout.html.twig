{% extends 'form_div_layout.html.twig' %}

{% block collection_widget %}
    {% set attr = attr|merge({'data-core': 'form-collection' }) %}
    <div class="collection-container">
        {{ parent() }}
        {% if allow_add %}
            <a href="#" data-core="form-collection-add">{{ add_label is not null ? add_label|trans({}, translation_domain) : 'Add' }}</a>
        {% endif %}
    </div>
{% endblock collection_widget %}